<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="857.0" prefWidth="400.0" styleClass="root"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.schooltransport.controllers.ConsultarNotificacoesController">

    <VBox alignment="TOP_CENTER" layoutY="21.0" prefHeight="777.0" prefWidth="400.0" spacing="20.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_LEFT" prefHeight="120.0" prefWidth="400.0" spacing="10.0" styleClass="cabecalho-topo">
            <padding>
                <Insets bottom="20.0" left="20.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="botaoVoltarTopo" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#voltarTela" prefHeight="45.0" prefWidth="43.0" styleClass="bottom" text="←">
                    <font>
                        <javafx.scene.text.Font size="13.0" />
                    </font>
                </Button>
                <Label text="Notificações" styleClass="bottom_voltar" />
            </children>
        </HBox>

        <VBox alignment="TOP_CENTER" prefWidth="360.0" spacing="10.0">
            <padding>
                <Insets top="10.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>

            <Label fx:id="mensagemStatus" text="" />

            <ListView fx:id="listViewNotificacoes" prefHeight="360.0" VBox.vgrow="ALWAYS" />

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <children>
                    <Button text="Remover Selecionado" fx:id="removerBtn" onAction="#removerSelecionado" styleClass="bottom" prefWidth="180.0" />
                    <Button text="Voltar" fx:id="voltarBtn" onAction="#voltarTela" styleClass="bottom_voltar" prefWidth="120.0" />
                </children>
            </HBox>
        </VBox>

    </VBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</AnchorPane>
