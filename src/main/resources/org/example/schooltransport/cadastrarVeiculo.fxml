<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="400.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.schooltransport.RegistrarParadaController">
    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="cabecalho-topo" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="20.0" left="20.0" top="20.0" />
            </padding>
         <Button mnemonicParsing="false" styleClass="bottom_voltar" stylesheets="@styles.css" text="← Voltar" />
        </HBox>

        <VBox alignment="TOP_CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
   
           <Label alignment="CENTER_LEFT" styleClass="titulo-principal" text="Cadastrar veiculo:">
               <padding>
                   <Insets bottom="20.0" left="20.0" right="20.0" />
               </padding>
            <font>
               <Font name="Quicksand Bold" size="12.0" />
            </font>
           </Label>

            <Label alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="label-campo" text="Modelo do ônibus:" />

            <TextField fx:id="campoNomeParada" styleClass="form-field" />

            <HBox alignment="CENTER_LEFT" spacing="10.0" />

            <HBox alignment="CENTER_LEFT" spacing="10.0" />
            <Button maxWidth="Infinity" prefHeight="45.0" styleClass="bottom" stylesheets="@styles.css" text="Cadastrar">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Button>

            <Label fx:id="mensagemStatus" styleClass="mensagem-status" text="" />
        </VBox>
    </VBox>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>
