<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="400.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.schooltransport.controllers.CadastrarParadaController">

    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox alignment="TOP_CENTER" spacing="20.0">

            <HBox alignment="CENTER_LEFT" prefHeight="71.0" prefWidth="400.0" spacing="10.0" styleClass="cabecalho-topo" VBox.vgrow="NEVER">
                <padding>
                    <Insets bottom="20.0" left="20.0" top="20.0" />
                </padding>
                <children>
                    <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#voltar" styleClass="bottom_voltar" stylesheets="@styles.css" text="← Voltar" />
                </children>
            </HBox>

            <Label alignment="CENTER_LEFT" styleClass="titulo-principal" text="Cadastrar parada:" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
            </Label>

            <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="painel-formulario" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
                </padding>
                <VBox.margin>
                    <Insets left="15.0" right="15.0" />
                </VBox.margin>

                <Label alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="label-campo" text="Selecione o aluno:" />
                <ComboBox fx:id="comboAluno" promptText="Buscar por nome ou CPF..." styleClass="form-field" maxWidth="Infinity" />

                <Label alignment="CENTER_LEFT" maxWidth="Infinity" styleClass="label-campo" text="Dados da Parada:" />
                <TextField fx:id="campoNomeParada" promptText="Nome da Parada (Ex: Casa, Escola)" styleClass="form-field" />
                <TextField fx:id="campoCEP" promptText="CEP" styleClass="form-field" />
                <TextField fx:id="campoLogradouro" promptText="Logradouro (Ex: Rua, Avenida)" styleClass="form-field" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <TextField fx:id="campoNumero" promptText="Número" styleClass="form-field" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="campoBairro" promptText="Bairro" styleClass="form-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <TextField fx:id="campoComplemento" promptText="Complemento (Opcional)" styleClass="form-field" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <TextField fx:id="campoCidade" promptText="Cidade" styleClass="form-field" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="campoEstado" promptText="Estado (Ex: BA ou Bahia)" styleClass="form-field" HBox.hgrow="ALWAYS" />
                </HBox>

                <Button fx:id="btnConcluir" maxWidth="Infinity" onAction="#concluirCadastro" prefHeight="45.0" styleClass="bottom" text="Concluir">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>

                <Label fx:id="labelErro" alignment="CENTER" maxWidth="Infinity" styleClass="label-erro" text="" textFill="#d32f2f" visible="false" wrapText="true">
                    <VBox.margin>
                        <Insets bottom="20.0" top="5.0" />
                    </VBox.margin>
                </Label>
            </VBox>
        </VBox>
    </ScrollPane>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>