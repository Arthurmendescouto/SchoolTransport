<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="400.0" styleClass="root"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.schooltransport.controllers.HorariosParadaController">

    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <HBox style="-fx-background-color: #E65100;" prefHeight="60" alignment="CENTER_LEFT">
            <Button fx:id="btnVoltar"
                    text="← Voltar"
                    onAction="#voltar"
                    style="-fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 0 0 0 20; -fx-background-color: transparent;" />
        </HBox>

        <Label text="Horários das paradas" style="-fx-font-size: 22px; -fx-text-fill: #E65100; -fx-font-weight: bold;" />

        <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="360">
            <Label text="Selecione o aluno:" />
            <ComboBox fx:id="comboAlunos" promptText="Escolha o dependente" prefWidth="320" />
        </VBox>

        <TableView fx:id="tabelaParadas" prefHeight="420.0" prefWidth="360.0">
            <columns>
                <TableColumn fx:id="colParada" text="Parada" prefWidth="220.0"/>
                <TableColumn fx:id="colHorario" text="Horário Previsto" prefWidth="140.0"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
