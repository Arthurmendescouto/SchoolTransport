<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<AnchorPane prefHeight="700.0" prefWidth="400.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.schooltransport.RegisterStopController">
    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="cabecalho-topo" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="20.0" left="20.0" top="20.0" />
            </padding>
            <Label text="&#x2190; Voltar" styleClass="label-voltar">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            </Label>
        </HBox>

        <Label alignment="CENTER_LEFT" text="Cadastrar parada:" styleClass="titulo-principal" HBox.hgrow="ALWAYS">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </Label>

        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="painel-formulario" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>

            <Label alignment="CENTER_LEFT" maxWidth="Infinity" text="Parada:" styleClass="label-campo" />

            <TextField fx:id="campoNomeParada" promptText="Nome da Parada" styleClass="form-field" />
            <TextField fx:id="campoCEP" promptText="CEP" styleClass="form-field" />
            <TextField fx:id="campoLogradouro" promptText="Logradouro" styleClass="form-field" />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextField fx:id="campoNumero" promptText="NÃºmero" styleClass="form-field" HBox.hgrow="ALWAYS" />
                <TextField fx:id="campoBairro" promptText="Bairro" styleClass="form-field" HBox.hgrow="ALWAYS" />
            </HBox>

            <TextField fx:id="campoComplemento" promptText="Complemento" styleClass="form-field" />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextField fx:id="campoCidade" promptText="Cidade" styleClass="form-field" HBox.hgrow="ALWAYS" />
                <TextField fx:id="campoEstado" promptText="Estado" styleClass="form-field" HBox.hgrow="ALWAYS" />
            </HBox>

            <Label fx:id="mensagemStatus" text="" styleClass="mensagem-status" />
            <Button maxWidth="Infinity" prefHeight="45.0" styleClass="botao-primario" text="Concluir">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>