<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<AnchorPane prefHeight="700.0" prefWidth="400.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.schooltransport.ListaParadaController">
    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_LEFT" prefHeight="71.0" prefWidth="400.0" spacing="10.0" styleClass="cabecalho-topo" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="20.0" left="20.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#voltar" styleClass="bottom_voltar" text="â† Voltar" />
            </children>
        </HBox>

        <Label alignment="CENTER_LEFT" styleClass="titulo-principal" text="Lista de paradas:" HBox.hgrow="ALWAYS">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </Label>

        <TableView fx:id="tabelaParadas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colunaParada" prefWidth="250.0" text="Ponto de Parada" />

                <TableColumn fx:id="colunaStatus" prefWidth="150.0" text="Status" />
            </columns>
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
        </TableView>

    </VBox>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>